    "guzzlehttp/guzzle": "^7.4",
    "themeplate/core": "^2.0",
    "themeplate/enqueue": "^2.1",
    "themeplate/logger": "^1.3",
    "themeplate/page": "^2.0",
    "themeplate/settings": "^2.0"
  },
  "require-dev": {
    "coenjacobs/mozart": "^0.7.1"
